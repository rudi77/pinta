# FastAPI Environment Variables

# Application Configuration
APP_NAME="Maler Kostenvoranschlag API"
DEBUG=false

# Database Configuration  
DATABASE_URL=sqlite+aiosqlite:///./maler_kostenvoranschlag.db
DATABASE_POOL_MAX_SIZE=20
DATABASE_POOL_OVERFLOW=10

# Security Configuration (CRITICAL - Change in Production)
SECRET_KEY=your-super-secret-jwt-key-must-be-at-least-32-characters-long-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_PRICE_ID=price_your_premium_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW_MINUTES=15

